<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_details_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordDetailsActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_callerNumber"
        android:textSize="25sp"
        android:text="Caller: +48668421133"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_date"
        android:textSize="25sp"
        android:text="Date: 25-01-2016"
        android:layout_below="@id/textView_callerNumber" />

    <Button
        android:id="@+id/btn_deleteRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_date"
        android:layout_alignParentLeft="true"

        android:text="Delete" />

    <Button
        android:id="@+id/btn_playStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btn_deleteRecord"
        android:layout_alignTop="@id/btn_deleteRecord"
        android:layout_alignParentRight="true"

        android:text="Play" />


    <ScrollView
        android:id="@+id/recordDetailsActivity_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btn_deleteRecord"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/RecordDetailsActivity_scrollViewInnerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </ScrollView>


</RelativeLayout>
